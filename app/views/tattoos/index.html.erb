<div class="container">
  <div class="flexbox-container">
    <h2>Available Tattoos</h2>
  </div>
  <div class="container">
  <div class="d-flex justify-content-between">
    <div class="form-group m-8">
      <input type="text" class="form-control m-8" placeholder="Search criteria" id="search">
    </div>
    <div class="form-group m-8">
      <input type="password" placeholder="Sort by" class="form-control m-8" id="sort">
    </div>
    <div class="col">
      <a href="" class="btn btn-primary">Search</a>
    </div>
  </div>
  </div>

  <div class="container m-16">
    <div class="cards">
      <% @tattoos.each do |tattoo| %>
      <div class="card">
        <div class="card-image">
          <%= cl_image_tag(tattoo.photo, width: 300, height: 300, crop: :fill) %>
          <div class="d-flex justify-content-center">
          <button class="btn btn-special m-4"><%= link_to tattoo.description, tattoo %></button>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>





