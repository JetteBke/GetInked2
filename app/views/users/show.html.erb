          <%= link_to "Add Tattoo", new_tattoo_path, class: 'btn btn-primary'%>
          <% end %>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center align-items-center">
    <% if @user.role == "artist" && @user == current_user %>
      <%= link_to "Add a tattoo", new_tattoo_path, class: 'btn btn-special m-2' %>
  <% end %>
    <%= link_to "Show all tattoos", tattoos_path, class: 'btn btn-special m-2' %>
