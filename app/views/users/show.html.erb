<% if @user.role == "artist" %>
<div class="container user-show-container container-fluid">
    <div class="row content">
      <div class="col-sm-6">
        <div id="carouselExampleSlidesOnly" data-interval ="4000" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%= cl_image_tag(@artist.tattoos[0].photo,
       width: 400, height: 300, crop: :fill) %>
            </div>
            <div class="carousel-item">
              <%= cl_image_tag(@artist.tattoos[1].photo,
       width: 400, height: 300, crop: :fill) %>
            </div>
            <div class="carousel-item">
             <%= cl_image_tag(@artist.tattoos[0].photo,
       width: 400, height: 300, crop: :fill) %>
            </div>
          </div>
          </div>
            </ul>
          </div>
        </div>
        <div class="card-product">
          <div class="d-flex justify-content-between mb-2">
          <h1><%= @user.name %></h1>
           <% if @user == current_user  %>
           <div>
              <%= link_to "Add Tattoo", new_tattoo_path, class: 'btn btn-special py-2 justify-content-center'%>
              </div>
            <% end %>
            </div>
          <h2>📍Lisboa </h2>
          <h2>💉 Style: Stick and Poke</h2>
          <h3> Reach out by sending an e-mail to <%= @user.email %></h3>
            <p> An amazing artist and a great person.</p>
            <p>The following tattoos are available:</p>
            <ul>
              <% @user.tattoos.each do |tattoo| %>
              <li><%= tattoo.description %></li>
              <% end %>
            </ul>

        </div>
      </div>

  </div>

  <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Show all tattoos", tattoos_path, class: 'btn btn-special m-2' %>
      <%= link_to "Go to my profile", user_path(current_user), class: 'btn btn-special m-2' %>
  </div>
<% end %>

