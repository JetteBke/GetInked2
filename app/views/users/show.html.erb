<div class="container-fluid">
  <div class="row content">
    <div class="col-sm-6">
      <% if @user.role == "artist" %>
        <div id="carouselExampleSlidesOnly" data-interval ="4000" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%= cl_image_tag(@artist.tattoos[0].photo,
       width: 400, height: 300, crop: :fill) %>
            </div>
            <div class="carousel-item">
              <%= cl_image_tag(@artist.tattoos[1].photo,
       width: 400, height: 300, crop: :fill) %>
            </div>
            <div class="carousel-item">
             <%= cl_image_tag(@artist.tattoos[2].photo,
       width: 400, height: 300, crop: :fill) %>
            </div>
          </div>
          </div>
            <% elsif @user.role == "customer" %>
            <div class="card-product card">
            <ul class="list-group">
              <li class="list-group-item">Your bookings:</li>
              <% @bookings.each do |booking| %>
                <% if booking.user == current_user %>
                  <li class="list-group-item">
                    <strong> <%= booking.tattoo.description %></strong> (by <%= booking.tattoo.user.name %>) is
                    <%= booking.status %> for <%= booking.date %> </li>
                <% end %>
              <% end %>
            </ul>
          <% end %>
        </div>
      </div>


    <div class="col-sm-6">
      <div class="card-product">
        <h1><%= @user.name %></h1>
